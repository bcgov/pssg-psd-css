{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}-deployment-template",
    "creationTimestamp": null
  },
  "objects": [
    {
      "apiVersion": "secops.pathfinder.gov.bc.ca/v1alpha1",
      "kind": "NetworkSecurityPolicy",
      "metadata": {
        "creationTimestamp": "2019-11-19T20:06:22Z",
        "finalizers": [
          "finalizer.secops.pathfinder.gov.bc.ca"
        ],
        "generation": 1,
        "name": "custom-allow-tools-to-${TAG_NAME}",
        "namespace": "${PROJECT_PREFIX}-${TAG_NAME}"
      },
      "spec": {
        "description": "Allow Tools to communicate with ${TAG_NAME} to verify deployment\n",
        "destination": [
          [ "$namespace=${PROJECT_PREFIX}-${TAG_NAME}" ]
        ],
        "source": [
          [ "$namespace=${PROJECT_PREFIX}-tools" ]
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "template": "${NAME}-deployment"
        },
        "annotations": {
          "description": "Defines how to deploy ${NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${SOURCE_IMAGE_NAME}:${TAG_NAME}"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${NAME}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}",
            "labels": {
              "name": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${NAME}",
                "image": "",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "ASPNETCORE_ENVIRONMENT",
                    "value": "${ASPNETCORE_ENVIRONMENT}"
                  },
                  {
                    "name": "UNDER_MAINTENANCE",
                    "value": "${UNDER_MAINTENANCE}"
                  },
                  {
                    "name": "CSA_ENABLED",
                    "value": "${CSA_ENABLED}"
                  },
                  {
                    "name": "BASE_PATH",
                    "value": "${BASE_PATH}"
                  },
                  {
                    "name": "SITEMINDER_LOGOUT_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SITEMINDER_LOGOUT_URL",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "CAPTCHA_API_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "CAPTCHA_URL",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "CAPTCHA_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "CAPTCHA_SECRET",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "ADFS_OAUTH2_URI",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "ADFS_OAUTH2_URI",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DYNAMICS_ODATA_URI",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "DYNAMICS_ODATA_URI",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DYNAMICS_NATIVE_ODATA_URI",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "DYNAMICS_NATIVE_ODATA_URI",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DYNAMICS_APP_GROUP_RESOURCE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "DYNAMICS_APP_GROUP_RESOURCE",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DYNAMICS_APP_GROUP_CLIENT_ID",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "DYNAMICS_APP_GROUP_CLIENT_ID",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DYNAMICS_APP_GROUP_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "DYNAMICS_APP_GROUP_SECRET",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DYNAMICS_USERNAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "DYNAMICS_USERNAME",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "DYNAMICS_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "DYNAMICS_PASSWORD",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "SHAREPOINT_ODATA_URI",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SHAREPOINT_ODATA_URI",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "SHAREPOINT_NATIVE_BASE_URI",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SHAREPOINT_NATIVE_BASE_URI",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "SHAREPOINT_STS_TOKEN_URI",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SHAREPOINT_STS_TOKEN_URI",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "SHAREPOINT_RELYING_PARTY_IDENTIFIER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SHAREPOINT_RELYING_PARTY_IDENTIFIER",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "SHAREPOINT_WEBNAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SHAREPOINT_WEBNAME",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "SHAREPOINT_USERNAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SHAREPOINT_USERNAME",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  },
                  {
                    "name": "SHAREPOINT_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "SHAREPOINT_PASSWORD",
                        "name": "${SECRET_RESOURCE_NAME}"
                      }
                    }
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "${CPU_LIMIT}",
                    "memory": "${MEMORY_LIMIT}"
                  },
                  "requests": {
                    "cpu": "${CPU_REQUEST}",
                    "memory": "${MEMORY_REQUEST}"
                  }
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/hc",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "liveinessProbe": {
                  "httpGet": {
                    "path": "/hc",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                }
              }
            ]
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "template": "${NAME}-deployment"
        },
        "annotations": {
          "description": "Exposes and load balances the application pods."
        }
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "${NAME}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "port": {
          "targetPort": "8080-tcp"
        },
        "tls": {
          "insecureEdgeTerminationPolicy": "Redirect",
          "termination": "edge"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    },
    {
      "kind": "HorizontalPodAutoscaler",
      "apiVersion": "autoscaling/v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "scaleTargetRef": {
          "kind": "DeploymentConfig",
          "name": "${NAME}"
        },
        "minReplicas": 2,
        "maxReplicas": 6
      }
    }
  ],
  "parameters": [
    {
      "name": "PROJECT_PREFIX",
      "displayName": "Name",
      "description": "The project prefix",
      "required": true,
      "value": "sxluez"
    },
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the resources defined in this template.",
      "required": true,
      "value": "css-portal"
    },
    {
      "name": "SOURCE_IMAGE_NAME",
      "displayName": "Source Image Name",
      "description": "The name of the image to use for this resource.",
      "required": true,
      "value": "css-portal"
    },
    {
      "name": "IMAGE_NAMESPACE",
      "displayName": "Image Namespace",
      "description": "The namespace of the OpenShift project containing the imagestream for the application.",
      "required": true,
      "value": "sxluez-tools"
    },
    {
      "name": "TAG_NAME",
      "displayName": "Environment TAG name",
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "required": true,
      "value": "dev"
    },
    {
      "name": "ASPNETCORE_ENVIRONMENT",
      "displayName": "AspNetCore Environment",
      "description": "The ASP Net Core deployment environment setting.",
      "required": true,
      "value": "Production"
    },
    {
      "name": "CPU_LIMIT",
      "displayName": "CPU Limit",
      "description": "Maximum amount of CPU the container can use.",
      "value": "1"
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Memory Limit",
      "description": "Maximum amount of memory the container can use.",
      "value": "4Gi"
    },
    {
      "name": "CPU_REQUEST",
      "displayName": "CPU Request",
      "description": "Starting amount of CPU the container can use.",
      "value": "100m"
    },
    {
      "name": "MEMORY_REQUEST",
      "displayName": "Memory Request",
      "description": "Starting amount of memory the container can use.",
      "value": "2Gi"
    },
    {
      "description": "The exposed hostname that will route to the service, e.g., myappname.pathfinder.gov.bc.ca, if left blank a value will be defaulted.",
      "displayName": "Application Domain",
      "name": "APPLICATION_DOMAIN",
      "value": "css-portal-dev.pathfinder.gov.bc.ca"
    },
    {
      "name": "SECRET_RESOURCE_NAME",
      "displayName": "Secret resource name",
      "description": "Secret resource name",
      "required": true,
      "value": "css-portal"
    },
    {
      "name": "UNDER_MAINTENANCE",
      "displayName": "Under maintenance",
      "description": "Site maintenance toggle",
      "required": true,
      "value": "false"
    },
    {
      "name": "CSA_ENABLED",
      "displayName": "CSA enabled",
      "description": "CSA functionality toggle",
      "required": true,
      "value": "true"
    },
    {
      "name": "BASE_PATH",
      "displayName": "Base path",
      "description": "Base path",
      "required": true,
      "value": "/communitysafety"
    },
	
	
	{
	  "name": "SITEMINDER_APPLICATION_DOMAIN",
      "displayName": "Siteminder application domain",
      "description": "Siteminder application domain",
      "required": false,
      "value": ""
	}
  ]
}